<?xml version="1.0" encoding="UTF-8"?>
<configuration status="off">
  <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    </Console>
  </appenders>

  <loggers>
    <!-- Disable Hibernate SQL logging -->
    <logger name="org.hibernate.SQL" level="warn"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="warn"/>
    <logger name="org.hibernate.engine.transaction.internal.TransactionImpl" level="warn"/>
    <logger name="org.hibernate.stat" level="warn"/>
    <logger name="org.hibernate.cache" level="warn"/>

    <!-- Disable Liquibase verbose logging -->
    <logger name="liquibase" level="warn"/>
    <logger name="liquibase.changelog" level="warn"/>
    <logger name="liquibase.database" level="warn"/>

    <!-- Disable Spring verbose logging -->
    <logger name="org.springframework" level="warn"/>
    <logger name="org.springframework.boot" level="warn"/>
    <logger name="org.springframework.data" level="warn"/>

    <!-- Disable Testcontainers verbose logging -->
    <logger name="org.testcontainers" level="warn"/>
    <logger name="tc" level="warn"/>

    <!-- Keep application logs at INFO level -->
    <logger name="application" level="info"/>
  </loggers>

  <root level="warn">
    <appender-ref ref="Console"/>
  </root>
</configuration>

